#include <stdio.h>

// Função para somar dois números
float somar(float a, float b) 
{
    return a + b;
}

// Função para subtrair dois números
float subtrair(float a, float b) 
{
    return a - b;
}

// Função para multiplicar dois números
float multiplicar(float a, float b) 
{
    return a * b;
}

// Função para dividir dois números
float dividir(float a, float b) 
{
    return a / b;
}

int main() 
{
    float num1, num2;
    
    printf("Digite o primeiro número: ");
    scanf("%f", &num1);
    
    printf("Digite o segundo número: ");
    scanf("%f", &num2);
    
    // Realizando as operações matemáticas
    float resultadoSoma = somar(num1, num2);
    float resultadoSubtracao = subtrair(num1, num2);
    float resultadoMultiplicacao = multiplicar(num1, num2);
    float resultadoDivisao = dividir(num1, num2);
    
    // Imprimindo os resultados
    printf("Resultado da soma: %.2f\n", resultadoSoma);
    printf("Resultado da subtracao: %.2f\n", resultadoSubtracao);
    printf("Resultado da multiplicacao: %.2f\n", resultadoMultiplicacao);
    printf("Resultado da divisao: %.2f\n", resultadoDivisao);
    
    return 0;
}